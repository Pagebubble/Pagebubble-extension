{
  "name": "Page Bubble",
  "description": "An AI that lives on a webpage",
  "version": "0.0.1",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["jquery-ui.min.css", "jquery-ui.structure.min.css", "jquery-ui.theme.min.css"],
      "js": ["jquery-2.2.0.min.js", "jquery-ui.min.js", "content.js"]
    }
  ],
  "browser_action": {
    "default_title": "Wake up the webpage AI!"
  },
  "manifest_version": 2
}
