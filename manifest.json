{
  "name": "Page Bubble",
  "description": "An AI that lives on a webpage",
  "version": "0.0.1",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "Wake up the webpage AI!"
  },
  "manifest_version": 2
}
